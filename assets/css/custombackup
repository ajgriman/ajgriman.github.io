  color: inherit; /* Makes text inside the link inherit color */
  height: 100%; /* Ensures the link takes full height of the grid item */
  transition: transform 0.3s ease-out, box-shadow 0.3s ease-out; /* For whole card hover */
}

.custom-project-card {
  background-color: #fff; /* Example: white background */
  border: 1px solid #e0e0e0; /* Example: light grey border */
